<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" spacing="32.0" styleClass="content-root"
      stylesheets="@../../kintsugiStyling.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kintsugi3d.builder.javafx.controllers.modals.systemsettings.CacheSettingsController">
    <Button mnemonicParsing="false" onAction="#clearCache" styleClass="wireframeBodyLarge" text="Clear Cache"/>
    <TitledPane styleClass="titled-pane, wireframeBody" text="Cache Path">
        <VBox spacing="8.0" styleClass="cache-settings-root">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
            <Label styleClass="wireframeBody" text="  Current Cache Paths: "/>
            <Label fx:id="previewImageCacheLabel" onMouseClicked="#openDirectory" styleClass="wireframeBody"
                   text="No Path Set">
                <VBox.margin>
                    <Insets left="16.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Label>
            <Label fx:id="specularFitCacheLabel" onMouseClicked="#openDirectory" styleClass="wireframeBody"
                   text="No Path Set">
                <VBox.margin>
                    <Insets left="16.0"/>
                </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Label>
            <Button disable="true" layoutX="10.0" layoutY="10.0" managed="false" mnemonicParsing="false"
                    text="Set Cache Path" visible="false"/>
        </VBox>
    </TitledPane>
</VBox>
