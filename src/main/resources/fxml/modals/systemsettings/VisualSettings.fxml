<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" fillWidth="false" styleClass="content-root" stylesheets="@../../kintsugiStyling.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kintsugi3d.builder.javafx.controllers.modals.systemsettings.ObjectVisualsController">
    <VBox spacing="16.0">
        <HBox alignment="CENTER_LEFT" spacing="16.0">
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="wireframeBody" text="Preview image Width: " />
                <TextField fx:id="previewWidthTxtField" prefWidth="64.0" styleClass="wireframeBody" />
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="wireframeBody" text="Height: " />
                <TextField fx:id="previewHeightTxtField" prefWidth="64.0" styleClass="wireframeBody" />
            </HBox>
        </HBox>
        <CheckBox fx:id="imageCompressionCheckBox" mnemonicParsing="false" styleClass="wireframeBody" text="Image compression" />
        <CheckBox fx:id="preloadVisibilityEtcCheckBox" mnemonicParsing="false" styleClass="wireframeBody" text="Generate depth maps for visibility / shadow testing" />
        <HBox alignment="CENTER_LEFT" spacing="16.0">
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="wireframeBody" text="Width: " />
                <TextField fx:id="depthWidthTxtField" prefWidth="64.0" styleClass="wireframeBody" />
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="wireframeBody" text="Height: " />
                <TextField fx:id="depthHeightTxtField" prefWidth="64.0" styleClass="wireframeBody" />
            </HBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="16.0" />
         </padding>
        </HBox>
        <CheckBox fx:id="mipmapCheckBox" mnemonicParsing="false" styleClass="wireframeBody" text="Mipmaps" />
        <CheckBox fx:id="reduceViewportResCheckBox" mnemonicParsing="false" styleClass="wireframeBody" text="Reduce viewport resolution" />
    </VBox>
</VBox>
