<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" fillWidth="false" spacing="16.0" styleClass="content-root"
      stylesheets="@../../kintsugiStyling.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="kintsugi3d.builder.javafx.controllers.modals.systemsettings.SystemMemoryController">
    <CheckBox fx:id="maxMemCheckbox" mnemonicParsing="false" styleClass="wireframeBody" text="Limit Memory Usage"/>
    <HBox alignment="CENTER_LEFT" spacing="16.0">
        <Spinner fx:id="maxMemSpinner" editable="true" maxWidth="80.0" styleClass="wireframeBody">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory max="10" min="0"/>
            </valueFactory>
        </Spinner>
        <Label styleClass="wireframeBody" text="MB"/>
        <padding>
            <Insets left="16.0"/>
        </padding>
    </HBox>
    <HBox alignment="CENTER_RIGHT">
        <Button mnemonicParsing="false" onAction="#button_Apply" styleClass="wireframeBodyLarge" text="Apply"/>
    </HBox>
</VBox>
