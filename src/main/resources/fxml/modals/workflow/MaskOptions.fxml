<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="rootNode" alignment="CENTER" fillWidth="false" styleClass="content-root" stylesheets="@../../kintsugiStyling.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kintsugi3d.builder.javafx.controllers.modals.workflow.MaskOptionsController">
    <VBox spacing="16.0">
        <CheckBox fx:id="occlusionCheckBox" mnemonicParsing="false" prefHeight="27.0" prefWidth="260.0" styleClass="wireframeBody" text="Visibility/shadow testing">
        </CheckBox>
        <GridPane hgap="16.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <Label styleClass="wireframeBody" text="Depth bias: " />
            <TextField fx:id="occlusionBiasTextField" prefWidth="100.0" styleClass="wireframeBody" GridPane.columnIndex="1" />
            <Slider fx:id="occlusionBiasSlider" majorTickUnit="0.001" max="0.004" showTickLabels="true" showTickMarks="true" styleClass="slider" value="0.0025" GridPane.columnIndex="2">
            </Slider>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <CheckBox fx:id="edgeProximityWeightCheckBox" mnemonicParsing="false" prefHeight="27.0" prefWidth="260.0" styleClass="wireframeBody" text="Edge feathering">
        </CheckBox>
        <GridPane hgap="16.0" vgap="16.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label styleClass="wireframeBody" text="Edge feather margin: ">
            </Label>
            <TextField fx:id="edgeProximityMarginTextField" prefHeight="39.0" prefWidth="100.0" styleClass="wireframeBody" GridPane.columnIndex="1">
            </TextField>
            <Slider fx:id="edgeProximityMarginSlider" majorTickUnit="0.5" max="1.0" minorTickCount="4" showTickLabels="true" showTickMarks="true" styleClass="slider" value="0.1" GridPane.columnIndex="2" />
            <Label styleClass="wireframeBody" text="Edge feather cutoff: " GridPane.rowIndex="1">
            </Label>
            <TextField fx:id="edgeProximityCutoffTextField" prefHeight="39.0" prefWidth="100.0" styleClass="wireframeBody" GridPane.columnIndex="1" GridPane.rowIndex="1">
            </TextField>
            <Slider fx:id="edgeProximityCutoffSlider" majorTickUnit="0.05" max="0.1" minorTickCount="4" showTickLabels="true" showTickMarks="true" styleClass="slider" value="0.01" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        </GridPane>
    </VBox>
</VBox>
