<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" alignment="CENTER" fillWidth="false" styleClass="content-root" stylesheets="@../kintsugiStyling.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kintsugi3d.builder.javafx.controllers.modals.workflow.SpecularFitController">
    <VBox spacing="16.0">
        <HBox alignment="CENTER_LEFT" spacing="16.0">
            <Label styleClass="wireframeBody, text" text="Texture resolution:" />
         <ComboBox fx:id="resolutionComboBox" promptText="Select a resolution..." styleClass="wireframeBody" />
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="16.0">
            <Label styleClass="wireframeBody, text" text="Specular count:" />
            <TextField fx:id="basisCountTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="8" />
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="16.0">
            <Label styleClass="wireframeBody, text" text="Min specular width:" />
            <TextField fx:id="specularMinWidthTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="0.2" />
        </HBox>
        <CheckBox fx:id="translucencyCheckBox" mnemonicParsing="false" styleClass="wireframeBody, checkbox" text="Fit translucency" />
        <CheckBox fx:id="openViewerOnComplete" mnemonicParsing="false" styleClass="wireframeBody, checkbox" text="Open Viewer once complete" />
      <Accordion fx:id="advancedAccordion" minWidth="480.0">
        <panes>
          <TitledPane animated="false" expanded="false" text="Advanced">
              <VBox spacing="16.0">
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Specular resolution:" />
                      <TextField fx:id="mfdResolutionTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="90" />
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Specular complexity:" />
                      <TextField fx:id="specularComplexityTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="1.0" />
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Metallicity:" />
                      <TextField fx:id="metallicityTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="0.0" />
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Specular smoothness:" />
                      <TextField fx:id="specularSmoothnessTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="1.0" />
                  </HBox>
                  <CheckBox fx:id="smithCheckBox" mnemonicParsing="false" selected="true" styleClass="wireframeBody, checkbox" text="Smith masking/shadowing" />
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Convergence tolerance:" />
                      <TextField fx:id="convergenceToleranceTextField" prefHeight="25.0" prefWidth="76.0" styleClass="wireframeBody" text="0.00001" />
                  </HBox>
                  <CheckBox fx:id="normalRefinementCheckBox" mnemonicParsing="false" selected="true" styleClass="wireframeBody, checkbox" text="Normal refinement" />
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Min. normal damping:" />
                      <TextField fx:id="minNormalDampingTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="1.0" />
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Normal smooth iterations:" />
                      <TextField fx:id="normalSmoothingIterationsTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="0" />
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="16.0">
                      <Label styleClass="wireframeBody, text" text="Unsuccessful Levenberg-Marquardt iterations allowed:" />
                      <TextField fx:id="unsuccessfulLMIterationsTextField" prefHeight="25.0" prefWidth="56.0" styleClass="wireframeBody" text="8" />
                  </HBox>
              </VBox>
               <padding>
                  <Insets bottom="4.0" />
               </padding>
          </TitledPane>
        </panes>
      </Accordion>
    </VBox>
</VBox>
