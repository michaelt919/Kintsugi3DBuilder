<GridPane prefHeight="600.0" prefWidth="700.0" styleClass="grid-pane" stylesheets="@systemSettingsStyling.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.fxml.menubar.SystemSettingsController">
    <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="0.0" prefWidth="250" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox spacing="10.0">
         <children>
            <CheckBox mnemonicParsing="false" styleClass="checkbox" text="Auto Cache Clearing (UNFINISHED)" />
            <Accordion styleClass="accordion">
              <panes>
                <TitledPane animated="true" styleClass="titled-pane" text="Cache Path">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="94.0" prefWidth="200.0" styleClass="anchor-pane">
                           <children>
                              <VBox spacing="7.0">
                                 <children>
                                    <Label text="  Current Cache Path: ........................" />
                                    <Button mnemonicParsing="false" styleClass="button" text="Clear Cache (UNFINISHED)" />
                                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" styleClass="button" text="Set Cache Path (UNFINISHED)" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </VBox>
       <VBox spacing="10.0" GridPane.columnIndex="1">
         <children>
            <CheckBox mnemonicParsing="false" styleClass="checkbox" text="Autosave (UNFINISHED)" />
             <ChoiceBox fx:id="autosaveOptionsChoiceBox" prefWidth="200.0" />
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin></VBox>
   </children>
</GridPane>
