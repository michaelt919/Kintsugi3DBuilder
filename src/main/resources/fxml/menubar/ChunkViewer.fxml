<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetzlaff.ibrelight.javafx.controllers.menubar.ChunkViewerController">
   <children>
      <HBox spacing="10.0">
         <children>
            <TreeView fx:id="chunkTreeView" onContextMenuRequested="#selectImageInTreeView" onMouseClicked="#selectImageInTreeView" prefHeight="400.0" prefWidth="287.0" />
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="326.0">
               <children>
                  <TextFlow fx:id="yourTextFlow" maxHeight="90.0" minHeight="20.0" prefHeight="20.0" prefWidth="326.0" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                     <Text fx:id="imgViewLabel" fontSmoothingType="LCD" text="No Image Selected" textOrigin="TOP" wrappingWidth="200" />
                  </TextFlow>
                  <ImageView fx:id="chunkViewerImgView" fitHeight="328.0" fitWidth="298.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <ChoiceBox fx:id="newChunkSelectionChoiceBox" prefWidth="150.0" />
            <Button fx:id="selectChunkButton" mnemonicParsing="false" onAction="#selectChunk" text="Select Chunk" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
