<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" fx:controller="tetzlaff.ibr.gui2.controllers.scene.environment_map.SettingsEVSceneController" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <TitledPane text="Environment map" animated="false">
        <GridPane alignment="CENTER_LEFT" hgap="5.0" vgap="10.0">
            <CheckBox fx:id="evUseImageCheckBox" text="Use image" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Text fx:id="evFileNameText" text="Filename" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            <Button onAction="#pickEVImageFile" text="Choose file" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Separator GridPane.columnSpan="2" GridPane.rowIndex="3" />
            <Text text="Color:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
            <ColorPicker fx:id="evColorPicker" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Intensity:" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rotation:" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
            <TextField fx:id="evColorIntensityTextField" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="6" />
            <TextField fx:id="evRotationTextField" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="8" />
            <Slider fx:id="evColorIntensitySlider" GridPane.columnSpan="2" GridPane.rowIndex="7" />
            <Slider fx:id="evRotationSlider" GridPane.columnSpan="2" GridPane.rowIndex="9" />
            <AnchorPane prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <ImageView fx:id="evImageView" fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" smooth="false"/>
            </AnchorPane>
         <CheckBox fx:id="evUseColorCheckBox" mnemonicParsing="false" text="Use color" GridPane.rowIndex="4" />
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
        </GridPane>
    </TitledPane>
   <TitledPane text="Backplate" animated="false" expanded="false">
      <content>
         <GridPane alignment="CENTER_LEFT" hgap="5.0" vgap="10.0">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
               <CheckBox fx:id="bpUseImageCheckBox" text="Use image" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
               <Text fx:id="bpFileNameText" text="Filename" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
               <Button onAction="#pickBPImageFile" text="Choose file" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
               <Separator GridPane.columnSpan="2" GridPane.rowIndex="3" />
               <Text text="Color:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
               <ColorPicker fx:id="bpColorPicker" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
                <AnchorPane prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <ImageView fx:id="bpImageView" fitHeight="100.0" fitWidth="200.0" pickOnBounds="true"
                               smooth="false"/>
                </AnchorPane>
               <CheckBox fx:id="bpUseColorCheckBox" mnemonicParsing="false" text="Use color" GridPane.rowIndex="4" />
            </children>
         </GridPane>
      </content>
   </TitledPane>
</VBox>
