<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<TabPane prefWidth="410.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetzlaff.ibr.javafx.controllers.scene.RootSceneController">

    <Tab text="Camera">
        <ScrollPane fitToWidth="true">
            <fx:include fx:id="camera" source="camera/RootCameraScene.fxml" />
        </ScrollPane>
    </Tab>

    <Tab text="Environment">
        <ScrollPane fitToWidth="true">
            <fx:include fx:id="environmentMap" source="environment_map/RootEnvironmentMapScene.fxml" />
        </ScrollPane>
    </Tab>

    <Tab text="Lights">
    <ScrollPane fitToWidth="true">
        <fx:include fx:id="lights" source="lights/RootLightScene.fxml" />
    </ScrollPane>

</Tab>
</TabPane>
