<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox maxWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetzlaff.ibr.javafx.controllers.scene.lights.RootLightSceneController">
    <TitledPane animated="false" text="Light Sets" VBox.vgrow="ALWAYS">
        <HBox prefHeight="0.0" spacing="2.0">
            <TableView fx:id="tableView" prefHeight="257.0" prefWidth="185.0" />
            <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
            <VBox fx:id="groupControls" alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Group" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#newGroup" text="New">
                    <tooltip>
                        <Tooltip text="Create a new light set." />
                    </tooltip>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveGroup" text="Save">
                    <tooltip>
                        <Tooltip text="Save the selected camera to the library." />
                    </tooltip>
                </Button>
                <Button fx:id="theRenameButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#renameGroup" text="Rename" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#moveUPGroup" text="Move up" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#moveDOWNGroup" text="Move down" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#lockGroup" text="Lock/Unlock">
                    <tooltip>
                        <Tooltip text="Lock the settings for the selected light set so they cannot be changed." />
                    </tooltip>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#keyframeGroup" text="Keyframe">
                    <tooltip>
                        <Tooltip text="Add the selected light set as a keyframe (for animation)." />
                    </tooltip>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteGroup" text="Delete">
                    <tooltip>
                        <Tooltip text="Delete selected light set." />
                    </tooltip>
                </Button>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox fx:id="lightControls" alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Light" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#newLight" text="New">
                    <tooltip>
                        <Tooltip text="Create a new light with default settings." />
                    </tooltip>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveLight" text="Save">
                    <tooltip>
                        <Tooltip text="Save the selected light to the library." />
                    </tooltip>
                </Button>
<Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#lockLight" text="Lock/Unlock">
                    <tooltip>
                        <Tooltip text="Lock the settings for the selected light so they cannot be changed." />
                    </tooltip>
                </Button>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteLight" text="Delete">
                    <tooltip>
                        <Tooltip text="Delete selected light." />
                    </tooltip>
                </Button>
            </VBox>
        </HBox>
    </TitledPane>
    <fx:include fx:id="settings" source="SettingsLightScene.fxml" />
</VBox>
