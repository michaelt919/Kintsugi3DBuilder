import static org.lwjgl.opengl.GL11.*;
import static org.lwjgl.opengl.GL20.*;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class OpenGLShader 
{
	private int shaderId;
	
	public OpenGLShader(int shaderType, String filename) throws FileNotFoundException
	{
		shaderId = glCreateShader(shaderType);
		File file = new File(filename);
        Scanner scanner = new Scanner(file);
        scanner.useDelimiter("\\Z"); // EOF
        String source = scanner.next();
        scanner.close();
        glShaderSource(shaderId, source);
        glCompileShader(shaderId);
        int compiled = glGetShaderi(shaderId, GL_COMPILE_STATUS);
        if (compiled == GL_FALSE)
        {
        	throw new ProgramLinkFailureException(glGetShaderInfoLog(shaderId));
        }
	}
	
	public int getId()
	{
		return shaderId;
	}
	
	public boolean isCompiled()
	{
		int compiled = glGetShaderi(shaderId, GL_COMPILE_STATUS);
        return compiled == GL_TRUE;
	}
	
	public void compile()
	{
		glCompileShader(shaderId);
        if (!this.isCompiled())
        {
        	throw new ShaderCompileFailureException(glGetShaderInfoLog(shader));
        }
	}
	
	public void delete()
	{
		glDeleteShader(shaderId);
	}
}
